{% extends "base.twig" %}

{% block content %}

<div class="blog">
  <ul class="blog__list">
    <li class="blog__item">
      <div class="blog__wrapper">
        <div class="blog__body">
          <div class="blog__image-wrapper">
            {% if post.thumbnail %}
              <img src="{{ post.thumbnail.src|tojpg|resize(120) }}"
                  class="blog__image" alt="{{ post.thumbnail.title }}"
                  srcset="
                    {{ post.thumbnail.src|tojpg|resize(120) }} 1x,
                    {{ post.thumbnail.src|tojpg|resize(240) }} 2x">
            {% endif %}
          </div>
          <div class="blog__text">
            <h1 class="blog__title">{{post.title}}</h1>
            <div class="blog__meta">{{post.date}}</div>
            {{post.content}}
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
{% include 'partials/blog.twig' with { 'posts': recent_posts } %}

<div class="paging">
  <a href="{{url_for_posts}}" class="paging__view-all">Bekijk alle berichten</a>
</div>


{% endblock %}