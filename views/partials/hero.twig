<div class="hero{% if hero.is_front_page %} hero--front-page{% endif %}">
  <img src="{{hero.image.src|tojpg|resize(800)}}"
       alt="{{hero.image.post_title}}" class="hero__image"
       srcset="
        {{hero.image.src|tojpg|resize(1140)}} 1140w,
        {{hero.image.src|tojpg|resize(800)}} 800w,
        {{hero.image.src|tojpg|resize(640)}} 640w"
       sizes="(min-width: 1140px) 1140px, 100vw">
  <div class="hero__wrapper">
    <div class="hero__text">
      <h1 class="hero__title js-skip-content" id="content">{{ hero.title }}</h1>
    </div>
  </div>
</div>
