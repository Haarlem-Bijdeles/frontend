{{function('wp_head')}}

{% include 'partials/icons.twig' %}

<header class="header" role="banner">
  <div class="header__wrapper">
    <a href="{{ site.url }}" title="{{ site.name }}" class="header__logo">
      {% include 'partials/defaults/svg.twig' with {'icon': 'logo', 'class': 'header__logo-icon header__logo-icon--large', 'title': site.name } %}
      {% include 'partials/defaults/svg.twig' with {'icon': 'logo-small', 'class': 'header__logo-icon header__logo-icon--small' } %}
    </a>

    <a href="#menu" class="skip-link">Naar hoofdnavigatiemenu</a>
    <a href="#main" class="skip-link">Naar hoofdinhoud</a>

    <button class="menu-trigger js-trigger-menu" aria-expanded="false">
      <div class="menu-trigger__icon">
        <div class="menu-trigger__bar menu-trigger__bar--1"></div>
        <div class="menu-trigger__bar menu-trigger__bar--2"></div>
        <div class="menu-trigger__bar menu-trigger__bar--3"></div>
      </div>
      Menu
    </button>

    {% include 'partials/menu.twig' with {'selector': 'menu', 'js_class': 'js-menu', 'menu': menu, 'label': 'site', 'id': 'menu'} %}

  </div>
</header>

<main id="main" class="main" tabindex="-1">

  {% include 'partials/hero.twig' %}

  {% block content %}

  {% endblock %}

</main>

<footer class="footer">
  <div class="footer__wrapper">
    <a href="{{ site.url }}" title="{{ site.name }}" class="footer__logo">
      {% include 'partials/defaults/svg.twig' with {'icon': 'logo', 'class': 'footer__logo-icon', 'title': site.name } %}
    </a>

    <div class="quick-links">
      <h2 id="footer-nav-heading">Handige links</h2>
      {% include 'partials/menu.twig' with {'selector': 'footer-menu', 'menu': footer_menu, 'label': 'footer-nav-heading' } %}
    </div>
    <div class="address">
      <h2>Contact</h2>
      {% include 'partials/address.twig' %}
    </div>
    <div class="social">
      <h2>Social media</h2>
      <p>Volg ons op</p>
      {% if options.facebook %}
        <a href="{{options.facebook}}" class="social__link" title="Volg {{site.name}} op Facebook" rel="noopener" target="_blank">
         {% include 'partials/defaults/svg.twig' with {'icon': 'facebook-rounded', 'class': 'social__icon', 'title': 'Volg ' ~ site.name ~ ' op Facebook' } %}
        </a>
      {% endif %}
      {% if options.twitter %}
        <a href="{{options.twitter}}" class="social__link" title="Volg {{site.name}} op Twitter" rel="noopener" target="_blank">
         {% include 'partials/defaults/svg.twig' with {'icon': 'twitter-rounded', 'class': 'social__icon', 'title': 'Volg ' ~ site.name ~ ' op Twitter' } %}
        </a>
      {% endif %}
      {% if options.linkedin %}
        <a href="{{options.linkedin}}" class="social__link" title="Volg {{site.name}} op LinkedIn" rel="noopener" target="_blank">
         {% include 'partials/defaults/svg.twig' with {'icon': 'linkedin-rounded', 'class': 'social__icon', 'title': 'Volg ' ~ site.name ~ ' op LinkedIn' } %}
        </a>
      {% endif %}
      {% if options.instagram %}
        <a href="{{options.instagram}}" class="social__link" title="Volg {{site.name}} op Instagram" rel="noopener" target="_blank">
         {% include 'partials/defaults/svg.twig' with {'icon': 'instagram', 'class': 'social__icon', 'title': 'Volg ' ~ site.name ~ ' op Instagram' } %}
        </a>
      {% endif %}
    </div>
  </div>
</footer>

{{function('wp_footer')}}