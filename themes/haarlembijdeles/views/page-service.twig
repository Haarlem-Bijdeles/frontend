{% extends "base.twig" %}

{% block content %}

<article class="content">
  {% include 'partials/intro.twig' %}
</article>

{% if post.get_field('student') and post.get_field('parents') %}
  <div class="highlights">
    <div class="highlights__wrapper">
        <div class="highlight">
          <h2>Voor de leerling:</h2>
          <ul>
            {% for item in post.get_field('student') %}
              <li>{{item.text}}</li>
            {% endfor %}
          </ul>
        </div>
      <div class="highlight">
        <h2>Voor de ouders:</h2>
        <ul>
          {% for item in post.get_field('parents') %}
            <li>{{item.text}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endif %}

{% if post.get_field('prices') %}
  <div class="prices2">
    {% if post.prices_image %}
      <img src="{{TimberImage(post.prices_image).src|tojpg|resize(800)}}"
          alt="{{TimberImage(post.prices_image).post_title}}" class="prices2__image"
         srcset="
          {{TimberImage(post.prices_image).src|tojpg|resize(1140)}} 1140w,
          {{TimberImage(post.prices_image).src|tojpg|resize(800)}} 800w,
          {{TimberImage(post.prices_image).src|tojpg|resize(640)}} 640w"
         sizes="(min-width: 1140px) 1140px, 100vw">
    {% endif %}
    <div class="prices2__wrapper">
      <div class="prices2__text">
        <h2 class="prices2__title">Kies het pakket dat bij uw kind past:</h2>
        <ul class="prices2__row prices2__row--{{ post.get_field('prices')|length }}-items">
         {% for price in post.get_field('prices') %}
            <li class="prices2__item{% if price.recommended %} prices2__item--recommended{% endif %}{% if post.prices_image %} prices2__item--transparent{% endif %}">
              {% if price.recommended %}
                <div class="prices2__badge">Meest gekozen</div>
              {% endif %}
              <div class="prices2__header">
                <div class="prices2__label">{{price.title}}</div>
                <div class="prices2__value">
                  {% include 'partials/defaults/svg.twig' with {'icon': 'check-rounded', 'class': 'prices2__icon' } %}
                  {{price.price}}
                </div>
              </div>

              {% if price.usps %}
                <ul>
                  {% for usp in price.usps %}
                    <li class="prices2__usp">{{usp.text}}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}

        </ul>
      </div>

      <a href="{{ site.url }}/contact" class="prices2__btn-cta">{{ options.label_btn_contactpage }}</a>
      <a href="tel:{{options.phonenumber|url_encode}}" class="prices2__btn-call">{{ options.label_btn_call }} {{options.phonenumber}}</a>
    </div>
  </div>
{% endif %}

{% include 'partials/testimonials.twig' %}

{% endblock %}